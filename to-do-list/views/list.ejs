<%- include('header'); -%>
<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <% newItem.forEach(function(element){ %>
            <form method="post" action="/delete">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange=form.submit()>
                    <p><%= element.name %><p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
        <% }) %>
        <form class="item" method='post' action="/">
            <input type="text" name="todo" placeholder="Add new task" autocomplete="off">
            <button type="submit" name='list' value=<%= listTitle %>>+</button>
        </form>
    </div>
  <%- include('footer'); -%>  

</body>
</html>