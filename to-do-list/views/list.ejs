<%- include('header'); -%>
<body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <% for(var i=0; i<newItem.length; i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= newItem[i] %><p>
            </div>
        <% } %>
        <form class="item" method='post' action="/">
            <input type="text" name="todo" placeholder="Add new task" autocomplete="off">
            <button type="submit" name='list' value=<%= listTitle %>>+</button>
        </form>
    </div>
  <%- include('footer'); -%>  

</body>
</html>